{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "bundle All",
			"type": "shell",
			"command": ".\\bundle.bat .",
			"problemMatcher": {
				"owner": "lua-bundler",
				"fileLocation": ["autoDetect", "$(workspaceFolder)/src"],
				"pattern": {
					"regexp": "^(.*)'-'(.*)'-'(.*)'-([0-9]*):([0-9]*):([0-9]*)$",
					"message": 1,
					"code": 2,
					"file": 3,
					"line": 4,
					"column": 5,
					"endColumn": 6
				}
			}
		},
		{
			"label": "bundle All optimized",
			"type": "shell",
			"command": ".\\bundle.bat . -p",
			"problemMatcher": {
				"owner": "lua-bundler",
				"fileLocation": ["autoDetect", "$(workspaceFolder)/src"],
				"pattern": {
					"regexp": "^(.*)'-'(.*)'-'(.*)'-([0-9]*):([0-9]*):([0-9]*)$",
					"message": 1,
					"code": 2,
					"file": 3,
					"line": 4,
					"column": 5,
					"endColumn": 6
				}
			}
		},
		{
			"label": "open FicsIt files",
			"type": "shell",
			"command": "code %localappdata%\\FactoryGame\\Saved\\SaveGames\\Computers"
		}
	]
}